#3
# Input angka
number = 153

# Ubah angka menjadi string untuk menghitung jumlah digit
digits = str(number)

# Hitung jumlah digit
jumlah_digit = len(digits)

# Hitung jumlah dari setiap digit yang dipangkatkan dengan jumlah digit
total = 0
for digit in digits:
    total = total + int(digit) ** jumlah_digit

# Cek apakah total sama dengan angka asli
if total == number:
    print(f"{number} is narcissistic number")
else:
    print(f"{number} is not narcissistic number")
